---
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar client:load />
		<div class="absolute top-0 -z-10 overflow-hidden" aria-hidden="true">
			<img src="/gradient.webp" alt="gradient" id="gradient">
		</div>
		<slot />
		<Footer />
		<script>
			const gradientElement = document.getElementById('gradient');
			if (gradientElement) {
					gradientElement.ondragstart = function() { return false; };
			}
		</script>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
		scroll-behavior: smooth;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
