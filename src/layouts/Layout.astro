---
import Navbar from "../components/Navbar";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-p-20 sm:scroll-p-24">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Nick Golitsyn Portfolio Website | Web Developer"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Load fonts with display swap -->
    <link
      href="https://fonts.googleapis.com/css2?family=Prompt:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navbar client:load />
    <div
      class="absolute top-0 -z-10 overflow-hidden print:hidden"
      aria-hidden="true"
    >
      <Image
        src="/gradient.webp"
        alt="gradient"
        id="gradient"
        width={1680}
        height={790}
        loading="eager"
      />
    </div>
    <slot />
    <Footer />
    <script>
      const gradientElement = document.getElementById("gradient");
      if (gradientElement) {
        gradientElement.ondragstart = function () {
          return false;
        };
      }
    </script>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background-size: 224px;
    scroll-behavior: smooth;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p,
  a {
    font-family: "Prompt", monospace;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .print-force-new-page {
    page-break-before: always;
  }
</style>
